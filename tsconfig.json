{
    "compilerOptions": {
      "module": "ESNext",        // Tells TypeScript to use ES module syntax
      "target": "ES6",           // Use modern JavaScript features
      "esModuleInterop": true,   // Ensures compatibility between CommonJS and ES modules
      "moduleResolution": "node",// Resolves modules like Node.js would
      "skipLibCheck": true,      // Skips type checking of declaration files for faster builds
      "allowSyntheticDefaultImports": true // Allows default imports from CommonJS modules
    },
    "include": ["src/**/*.ts"],   // Include all TypeScript files in src
    "exclude": ["node_modules"]   // Exclude node_modules
  }
  